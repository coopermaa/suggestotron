<h1>Topics</h1>

<%= link_to 'New Topic', new_topic_path, class: "btn btn-primary pull-right" %>

<table class="table table-stripped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>票數</th>
      <th>+1</th>
      <th>-1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic %></td>
        <td><%= topic.votes.size %></td>
        <td><%= button_to '+1', upvote_topic_path(topic), method: :post, class: "btn btn-sm btn-primary" %></td>
        <td><%= button_to '-1', downvote_topic_path(topic), method: :post, class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to '', topic, method: :delete, data: { confirm: 'Are you sure?' },
                   class: "btn btn-sm btn-danger glyphicon glyphicon-trash" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @topics, renderer: BootstrapPagination::Rails  %>
